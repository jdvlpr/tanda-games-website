---
export interface Props {
	title: string;
}

const { title } = Astro.props;
const d = new Date();
let year = d.getFullYear();
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,400;0,700;0,900;1,100;1,400&family=Tai+Heritage+Pro&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body
		class="bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 text-center"
	>
		<slot />
		<footer class="bg-neutral-100 dark:bg-neutral-800 py-8 font-serif">
			&copy; T&A Games {year}
		</footer>
	</body>
</html>
