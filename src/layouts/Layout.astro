---
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const d = new Date();
let year = d.getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100;0,400;0,700;0,900;1,100;1,400&family=Tai+Heritage+Pro&display=swap"
      rel="stylesheet"
    />


    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "ea81zq1sbb");
    </script>
  </head>
  <body
    class="bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 text-center min-h-[100svh] flex flex-col justify-start"
  >
    <slot />
    <footer class="bg-neutral-100 dark:bg-neutral-800 py-8 font-serif">
      &copy; T&A Games {year}
    </footer>
  </body>
</html>
